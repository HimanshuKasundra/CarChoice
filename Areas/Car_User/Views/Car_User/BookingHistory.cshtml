@using System.Data;
@using CarChoice.BAL;
@{
    ViewData["Title"] = " Customer Details";
    Layout = "~/Views/Shared/_Layout_CustomerDetails.cshtml";
}
@model DataTable

<section class="section" style="margin-top:20px;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="d-flex justify-content-between card-header">
                    <div class="">
                        <h5>Booking List</h5>
                    </div>
                </div>
                <div style="overflow:scroll ">
                <div class="card-body">
                    <br />

                    <!-- Table with hoverable rows -->
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">Car Image</th>
                                <th scope="col" class="text-center">Car Name</th>
                                <th scope="col" class="text-center">Brand Name</th>
                                <th scope="col" class="text-center">From Date</th>
                                <th scope="col" class="text-center">To Date</th>
                                <th scope="col" class="text-center">Total Fare</th>
                                <th scope="col" class="text-center"> Booking Status</th>
                                <th scope="col" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {@*
                            DateTime? From = Convert.ToDateTime(dr["DBFromDate"]);
                            DateTime? To = Convert.ToDateTime(dr["DBToDate"]);
                            DateTime date2 = new DateTime(0001, 01, 01, 00, 00, 00);*@
                                
                                <tr>
                                    <td class="text-center"><img src=@Url.Content(@dr["CarImageURL"].ToString()) class="img-thumbnail" style=" border-radius: 50%;height:80px; width:80px;" /></td>
                                    <td class="text-center">@dr["CarName"]</td>
                                    <td class="text-center">@dr["BrandName"]</td>
                                    <td class="text-center">@dr["PickupDate"]</td>
                                    <td class="text-center">@dr["ReturnDate"]   </td>
                                        <td class="text-center"> <span>&#8377 </span>@dr["TotalCost"]</td>
                                    <td class="text-center">@dr["Status"]</td>

                                    <td>
                                        <a asp-area="Car_User" asp-controller="Car_User" asp-action="CancelTrip" asp-route-CarID="@Convert.ToInt32(dr["CarID"])" asp-route-CustomerID="@Convert.ToInt32(CV.CustomerID())" onclick="func()">
                                            <input type="button" class="btn btn-danger" value="Cancel Trip" />
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with hoverable rows -->

                </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script>
        function func() {
            if (confirm("Are you sure you want to Cancel your trip?")) {
                return true;
            }
            else {
                return false;
            }
        }
    </script>
}