@using System.Data;
@{
    ViewData["Title"] = "Car List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Car Details page</h1>

<table class="table table-hover table-bordered  table-header-fixed">
    <thead>
        <tr>
            <th scope="col" class="text-center">Image</th>

            <th scope="col" class="text-center" =>CarName</th>
            <th scope="col" class="text-center" =>Brand</th>
            <th scope="col" class="text-center" =>Model</th>
            <th scope="col" class="text-center" =>Year</th>
            <th scope="col" class="text-center" =>Transmission</th>
            <th scope="col" class="text-center" =>Fuel</th>
            <th scope="col" class="text-center" =>VehicleNo.</th>
            <th scope="col" class="text-center" =>Rent</th>
            <th scope="col" class="text-center" =>Availbility</th>
            @*   <th class="text-center">Created</th>
            <th class="text-center">Modified</th>*@
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody id="sample_2">
        @foreach (DataRow dataRow in Model.Rows)
        {
            <tr>
                <td class="text-center"><img src=@Url.Content(@dataRow["CarImageURL"].ToString()) class="img-thumbnail" style=" border-radius: 20%; height:90px; width:1500px;" /></td>

                <td class="text-center">@dataRow["CarName"]</td>
                <td class="text-center">@dataRow["BrandName"]</td>
                <td class="text-center">@dataRow["Model"]</td>
                <td class="text-center">@Convert.ToInt32( dataRow["Year"].ToString())</td>
                <td class="text-center">@dataRow["TransmissionType"]</td>
                <td class="text-center">@dataRow["FuelType"]</td>
                <td class="text-center">@dataRow["VehicleNo"]</td>
                <td class="text-center">@Convert.ToDouble(dataRow["Rent"].ToString())rs.</td>
                <td class="text-center">@dataRow["Availability"]</td>
                @*<td class="text-center">@Convert.ToDateTime(dataRow["Created"]).ToString("dd-MM-yyyy")</td>
            <td class="text-center">@Convert.ToDateTime(dataRow["Modified"]).ToString("dd-MM-yyyy")</td>*@
                <td class="justify-content-center  text-center">
                    <div class="d-flex justify-content-center">
                        <div class="me-2">
                            <form asp-area="Car" asp-controller="Car" asp-action="CarAddEdit">
                                <input type="hidden" value="@Convert.ToInt32(dataRow["CarID"].ToString())" name="CarID" />
                                <button type="submit" class="btn btn-warning" value="Detals">Edit</button>
                            </form>
                        </div>
                        <div class="ms-2">
                            <form method="post" asp-area="Car" asp-controller="Car" asp-action="CarDelete">
                                <input type="hidden" value="@Convert.ToInt32(dataRow["CarID"].ToString())" name="CarID" />
                                <button type="submit" class="btn btn-danger" value="Detals">Delete</button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
