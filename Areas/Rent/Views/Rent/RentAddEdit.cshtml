@{
    ViewData["Title"] = "Add Rent ";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@model CarChoice.Areas.Rent.Models.RentModel


<main class="main" id="main">
    <div class="pagetitle">
        <h1>Rent</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i></a></li>
                <li class="breadcrumb-item"><span>Rent Add</span></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <form class="row g-3" role="form" method="post" enctype="multipart/form-data" asp-area="Rent" asp-controller="Rent" asp-action="RentSave">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x=>x.RentID)
        <div class="col-md-12">
            <div class="form-floating">
                <input type="text" class="form-control" asp-for="Rent" placeholder="Enter Country Name" />
                <span asp-validation-for="Rent" class="text-danger"></span>
                <label for="floatingName">Rent </label>
            </div>
            <div class="form-floating mt-3">
                <input type="text" class="form-control" asp-for="CarType" placeholder="Enter Country Name" />
                <span asp-validation-for="CarType" class="text-danger"></span>
                <label for="floatingName">Car Type </label>
            </div>
        </div>


        <div class="text-center">
            <button type="submit" class="btn btn-outline-success">Save</button>
            <a class="btn btn-outline-secondary" asp-area="Rent" asp-controller="Rent" asp-action="RentList">Back</a>
        </div>
    </form>
</main>
