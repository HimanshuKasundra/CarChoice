@{
    ViewData["Title"] = "Rent List";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@using System.Data
@model DataTable
@using CarChoice.Areas.Rent.Models


<main id="main" class="main">
    <div class="pagetitle">
        <h1>Rent</h1>
        <nav>
            <div class="Row">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="bi bi-house-door"></i></a></li>
                    <li class="breadcrumb-item"><a asp-controller="Rent" asp-area="Rent" asp-action="RentList">Rent List</a></li>
                 </ol>   
            </div>
            
        </nav>
    </div><!-- End Page Title -->
    <div class="m-2">
        <form class="row g-3" method="post">

            <div class="d-flex justify-content-between align-items-center">

                <div>
                    <a asp-area="Rent" asp-controller="Rent" asp-action="RentAddEdit" class="btn btn-outline-primary"><i class="bi bi-plus-lg"></i>&nbsp;Add Rent</a>
                </div>
            </div>
        </form>
    </div>
    <div style="overflow:scroll ">
        <table class="table table-hover table-bordered  table-header-fixed">
        <thead>
            <tr>
                    <th scope="col" class="text-center">Rent Id</th>

                    <th scope="col" class="text-center">Rent </th>
                    <th scope="col" class="text-center">Car type</th>
                    <th scope="col"  class="text-center">Created</th>
                    <th scope="col"  class="text-center">Modified</th>
                    <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody id="sample_2">
            @foreach (DataRow dataRow in Model.Rows)
            {
                <tr>
                    <td class="text-center">@dataRow["RentID"]</td>
                        <td class="text-center">@dataRow["Rent"]</td>
                        <td class="text-center">@dataRow["CarType"]</td>

                    <td class="text-center">@Convert.ToDateTime(dataRow["Created"]).ToString("dd-MM-yyyy")</td>
                    <td class="text-center">@Convert.ToDateTime(dataRow["Modified"]).ToString("dd-MM-yyyy")</td>
                    <td class="justify-content-center text-center">
                            <div class="d-flex justify-content-center">
                            <div class="me-2 text-center">
                                <form method="post" asp-area="Rent" asp-controller="Rent" asp-action="RentAddEdit">
                                    <input type="hidden" value="@Convert.ToInt32(dataRow["RentID"].ToString())" name="RentID" />
                                    <button type="submit" class="btn btn-warning" value="Detals">Edit</button>
                                </form>
                            </div>
                            <div class="ms-2 text-center">
                                <form asp-area="Rent" asp-controller="Rent" asp-action="RentDelete" onclick="fun1()">
                                    <input type="hidden" value="@Convert.ToInt32(dataRow["RentID"].ToString())" name="RentID" />
                                    <button type="submit" class="btn btn-danger" value="Detals">Delete</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</main>

@section Scripts{
    <script>
        function fun1() {
            if (confirm("Are you sure you want to delete?")) {
                return true;
            }
            else {
                return false;
            }
        }
    </script>
}
