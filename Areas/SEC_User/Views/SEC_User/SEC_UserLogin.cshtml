@{
	ViewData["Title"] = "Login  Page";
	Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
@model CarChoice.Areas.SEC_User.Models.SEC_UserModel;
@using CarChoice.Areas.SEC_User.Models;
@using System.Data;
<main class="main" id="main">


<div class="d-flex flex-column flex-root" id="kt_app_root">
	<!--begin::Page bg image-->
	<style>
		body {
			background-image: url('~/media/auth/bg10.jpeg');
		}

		[data-bs-theme="dark"] body {
			background-image: url('~/media/auth/bg10-dark.jpeg');
		}</style>
	<!--end::Page bg image-->
	<!--begin::Authentication - Sign-in -->
	<div class="d-flex flex-column flex-lg-row flex-column-fluid" >
		<!--begin::Aside-->
		<div class="d-flex flex-lg-row-fluid" >
			<!--begin::Content-->
			<div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100">
				<!--begin::Image-->
				<img class="theme-light-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/media/auth/agency.png" alt="" />
				<img class="theme-dark-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="~/media/auth/agency-dark.png" alt="" />
				<!--end::Image-->
				<!--begin::Title-->
				<h1 class="text-gray-800 fs-2qx fw-bold text-center mb-7">Fast, Efficient and Productive</h1>
				<!--end::Title-->
				<!--begin::Text-->
				<div class="text-gray-600 fs-base text-center fw-semibold">
					In this kind of post,
					<a href="#" class="opacity-75-hover text-primary me-1">the blogger</a>introduces a person they’ve interviewed
					<br />and provides some background information about
					<a href="#" class="opacity-75-hover text-primary me-1">the interviewee</a>and their
					<br />work following this is a transcript of the interview.
				</div>
				<!--end::Text-->
			</div>
			<!--end::Content-->
		</div>
		<!--begin::Aside-->
		<!--begin::Body-->
		<div class="d-flex opacity-100 flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-8" >
			<!--begin::Wrapper-->
			<div class="bg-body d-flex flex-column flex-center rounded-4 w-md-600px p-8" >
				<div class="text-center mb-2" >
					<h1 class="text-gray-900 fw-bolder fs-3qx fw-bold mb-2">Car<span class="navbar-brand fs-3qx fw-bold " style="color:darkgoldenrod  ">Choice</span></h1>

				</div>
				<!--begin::Content-->
				<div class="d-flex  flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
					
						<!--begin::Wrapper-->
						<!--begin::Heading-->
					<div class="d-flex flex-center flex-column flex-column-fluid pb-15 pb-lg-20">							
						<!--begin::Heading-->
							

						<form class="row g-1 needs-validation" asp-area="SEC_User" asp-action="Login" asp-controller="SEC_User">
							
							<div class="text-center mb-11">
								<!--begin::Title-->
								<h1 class="fw-bolder fs-2qx mb-2" style="color:limegreen">Sign In</h1>
								<!--end::Title-->
								<!--begin::Subtitle-->
								<div class="text-gray-500 fw-semibold fs-6">Your Social Campaigns</div>
								<!--end::Subtitle=-->
							</div>

							<div class="col-12">
								<label for="yourUsername" class="form-label">Username</label>
								<div class="input-group has-validation">
									<input type="text" name="username" placeholder="Enter username / Email" class="form-control" asp-for="UserName" id="yourUsername" required>
									<span asp-validation-for="UserName" class="text-danger"></span>
									<div class="invalid-feedback">Please enter your username.</div>
								</div>
							</div>

							<div class="col-12 mb-6">
								<label for="yourPassword" class="form-label">Password</label>
								<input type="password" name="password" placeholder="Enter Password" class="form-control" asp-for="Password" id="yourPassword" required>
								<span asp-validation-for="Password" class="text-danger"></span>
								<div class="invalid-feedback">Please enter your password!</div>
							</div>
								@if (TempData["Error"] != null)
								{
									<div class="text-danger">
										@Html.Raw(Convert.ToString(TempData["Error"]))
									</div>
								}

							<div class="col-12">
								<button class="btn btn-primary w-100 mb-3" type="submit" style="margin-top:20px">Login</button>
							</div>

							<div class="col-12">
								<p class="medium mb-0">Don't have account? <a asp-area="SEC_User" asp-controller="SEC_User" asp-action="SEC_UserRegister">Create an account</a></p>
							</div>

						</form>

					</div>
				</div>
							
				<!--end::Content-->
			</div>
			<!--end::Wrapper-->
		</div>
		<!--end::Body-->
	</div>
	<!--end::Authentication - Sign-in-->
</div>
</main>
