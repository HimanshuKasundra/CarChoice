@{
    ViewData["Title"] = " Admin Details";

	Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@using System.Data
@model CarChoice.Areas.Customer.Models.CustomerModel;
@using CarChoice.BAL;



<main class="main" id="main">
<section class="section profile">
    <div class="row">
        <div class="col-xl-4">

            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                        <img src=@Url.Content(@Model.CustomerImageURL.ToString()) alt="Profile" class="img-thumbnail" style=" border-radius: 10%; height:130px; width:150px;" />
                        <h3 style="font-weight:700; font-size:large">@Model.FirstName  @Model.LastName</h3>
                        <h6>Backend Developer </h6>
                    <div class="social-links mt-2">
                            <a href="https://twitter.com/HimanshuKasund2" class="twitter"><i class="bi bi-twitter"></i></a>
                            <a href="https://www.facebook.com/HKPatel15" class="facebook"><i class="bi bi-facebook"></i></a>
                            <a href="https://www.instagram.com/_mr_patel15_/" class="instagram"><i class="bi bi-instagram"></i></a>
                            <a href="https://www.linkedin.com/in/HimanshuKasundra/" class="linkedin"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                        </li>

                        <li class="nav-item">
                                <button class="nav-link"  data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                        </li>

                       

                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                           
                            <h4 class="card-title">Profile Details</h4>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label " style=" color:black;">First Name</div>
                                    <div class="col-lg-8 col-md-8 " style=" color:black;">@Model.FirstName</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">LastName</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black;">@Model.LastName</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">Email</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black">@Model.Email</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">User Name</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black">@Model.UserName</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">Mobile</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black;">@Model.Mobile</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">Address</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black;">@Model.Address</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">LicenceNumber</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black;">@Model.LicenceNumber</div>
                                </div>

                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                            <!-- Profile Edit Form -->
                                <form  role="form" method="post" enctype="multipart/form-data" asp-controller="Customer" asp-action="AdminSave" asp-area="Customer">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    @Html.HiddenFor(x=>x.CustomerID)

                                <div class="row mb-3">
                                        <label for="firstName" class="col-md-4 col-lg-3 col-form-label">First Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="firstName" type="text" asp-for="FirstName" class="form-control" id="firstName" placeholder="Enter a First Name">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                        <label for="lastName" class="col-md-4 col-lg-3 col-form-label" >Last Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="lastName" type="text" asp-for="LastName" class="form-control" id="latName" placeholder="Enter a Last Name">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                    <div class="row mb-3">
                                        <label for="userName" class="col-md-4 col-lg-3 col-form-label">User Name</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="userName" type="text" asp-for="UserName" class="form-control" id="latName" placeholder="Enter a User Name">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>

                                <div class="row mb-3">
                                        <label for="company" class="col-md-4 col-lg-3 col-form-label">Password</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="password" type="password" asp-for="Password" class="form-control" id="password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>


                                    <div class="row mb-3">
                                        <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="Email" type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter a Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Mobile</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="Mobile" type="Mobile" asp-for="Mobile" class="form-control" id="mobile" placeholder="Enter a Mobile">
                                            <span asp-validation-for="Mobile" class="text-danger"></span>
                                        </div>
                                    </div>

                                <div class="row mb-3">
                                    <label for="Address" class="col-md-4 col-lg-3 col-form-label">Address</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="address" type="text" class="form-control" asp-for="Address" id="Address">
                                          <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>

                                    <div class="row mb-3">
                                        <label for="LicenceNumber" class="col-md-4 col-lg-3 col-form-label">Licence no.</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="LicenceNumber" type="text" class="form-control" asp-for="LicenceNumber" id="LicenceNumber" >
                                            <span asp-validation-for="LicenceNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                <div class="row mb-3">
                                        <label asp-for="LicenceImage" class="form-label"></label>         
                                        <div class="custom-file">
                                            <input class="form-control" id="coverphoto" autofocus asp-for="LicenceImage" class="custom-file-input" id="customFile" required>
                                            <label class="custome-file-label" for="customFile"></label>
                                        </div>
                                        <div class="invalid-feedback">Please Choose file of Licence</div>
                                        <span asp-validation-for="LicenceImage" class="text-danger"></span>
                                </div>

                                    <div class="row mb-3">
                                        <label asp-for="CustomerImage" class="form-label"></label>
                                        <div class="custom-file">
                                            <input class="form-control" id="coverphoto" autofocus asp-for="CustomerImage" class="custom-file-input" id="customFile" required>
                                            <label class="custome-file-label" for="customFile"></label>
                                        </div>
                                        <div class="invalid-feedback">Please Choose file of Licence</div>
                                        <span asp-validation-for="CustomerImage" class="text-danger"></span>
                                    </div>

                                   

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </form><!-- End Profile Edit Form -->

                        </div>

                        

                        </div>

                        

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>
</main>