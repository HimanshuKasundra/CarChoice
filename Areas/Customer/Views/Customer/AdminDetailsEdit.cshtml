@{
    ViewData["Title"] = " Admin Details";

	Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@using System.Data
@model DataTable
@using CarChoice.Areas.Customer.Models;
@using CarChoice.BAL;



<main class="main" id="main">
<section class="section profile">
    <div class="row">
        <div class="col-xl-4">

            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                        <img src=@Url.Content(@Model.Rows[0]["CustomerImageURL"].ToString()) alt="Profile" class="img-thumbnail" style=" border-radius: 10%; height:130px; width:150px;" />
                        <h3>@CV.FirstName()  @CV.LastName()</h3>
                    <h4>Backend Developer </h4>
                    <div class="social-links mt-2">
                            <a href="https://twitter.com/HimanshuKasund2" class="twitter"><i class="bi bi-twitter"></i></a>
                            <a href="https://www.facebook.com/HKPatel15" class="facebook"><i class="bi bi-facebook"></i></a>
                            <a href="https://www.instagram.com/_mr_patel15_/" class="instagram"><i class="bi bi-instagram"></i></a>
                            <a href="https://www.linkedin.com/in/HimanshuKasundra/" class="linkedin"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Overview</button>
                        </li>

                        <li class="nav-item">
                                <button class="nav-link" asp-area="Customer" asp-controller="Customer" asp-action="EditAdminDetails" asp-route-CustomerID="@Convert.ToInt32(@CV.CustomerID())" data-bs-toggle="tab" data-bs-target="#profile-edit">Edit Profile</button>
                        </li>

                       

                    </ul>
                    <div class="tab-content pt-2">

                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                           
                            <h5 class="card-title">Profile Details</h5>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label " style=" color:black;">Full Name</div>
                                    <div class="col-lg-8 col-md-8 " style=" color:black;">@Model.Rows[0]["FirstName"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">LastName</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black;">@Model.Rows[0]["LastName"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">Email</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black">@Model.Rows[0]["Email"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">User Name</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black">@Model.Rows[0]["UserName"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">Mobile</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black;">@Model.Rows[0]["Mobile"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">Address</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black;">@Model.Rows[0]["Address"]</div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-4 col-md-4 label" style=" color:black;">LicenceNumber</div>
                                    <div class="col-lg-8 col-md-8" style=" color:black;">@Model.Rows[0]["LicenceNumber"]</div>
                                </div>

                        </div>

                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">

                            <!-- Profile Edit Form -->
                                <form  role="form" method="post" enctype="multipart/form-data" asp-controller="Customer" asp-action="CustomerSave" asp-area="Customer">
                                <div class="row mb-3">
                                    <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                                    <div class="col-md-8 col-lg-9">
                                        <img src="assets/img/profile-img.jpg" alt="Profile">
                                        <div class="pt-2">
                                            <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
                                            <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">First Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="fullName" type="text" class="form-control" id="fullName" placeholder="Enter a Name">
                                        <span asp-validation-for="@Model.Rows[0]["FirstName"]" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Last Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="lastName" type="text" class="form-control" id="latName" placeholder="Enter a Name">
                                        <span asp-validation-for="@Model.Rows[0]["LastName"]" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="company" class="col-md-4 col-lg-3 col-form-label">Company</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="company" type="text" class="form-control" id="company" value="Lueilwitz, Wisoky and Leuschke">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Job" class="col-md-4 col-lg-3 col-form-label">Job</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="job" type="text" class="form-control" id="Job" value="Web Designer">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Country" class="col-md-4 col-lg-3 col-form-label">Country</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="country" type="text" class="form-control" id="Country" value="USA">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Address" class="col-md-4 col-lg-3 col-form-label">Address</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="address" type="text" class="form-control" id="Address" value="A108 Adam Street, New York, NY 535022">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="phone" type="text" class="form-control" id="Phone" value="(436) 486-3538 x29071">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="email" type="email" class="form-control" id="Email" value="k.anderson@example.com">
                                    </div>
                                </div>

                               

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                </div>
                            </form><!-- End Profile Edit Form -->

                        </div>

                        

                        </div>

                        

                    </div><!-- End Bordered Tabs -->

                </div>
            </div>

        </div>
    </div>
</section>
</main>